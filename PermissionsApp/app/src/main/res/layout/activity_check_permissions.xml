<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CheckPermissions">

    <Button
            android:text="Storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/storageBtn"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="80dp"/>
    <Button
            android:text="Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/locationBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/storageBtn"
            android:layout_marginTop="36dp"/>
    <Button
            android:text="Camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cameraBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.49" app:layout_constraintTop_toBottomOf="@+id/locationBtn"
            android:layout_marginTop="36dp"/>
    <Button
            android:text="Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/phoneBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cameraBtn" android:layout_marginTop="36dp"/>
    <Button
            android:text="Contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/contactsBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.504" app:layout_constraintTop_toBottomOf="@+id/phoneBtn"
            android:layout_marginTop="36dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>