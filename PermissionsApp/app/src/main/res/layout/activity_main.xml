<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="0dp"
            android:layout_height="90dp" android:id="@+id/TitleText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:text="Choose what to allow the app to use"
            android:textSize="38sp" android:textColor="#000000" android:textStyle="italic"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="Storage"
            android:layout_width="150dp"
            android:layout_height="27dp" android:id="@+id/textView2"
            android:layout_marginTop="43dp"
            app:layout_constraintTop_toBottomOf="@+id/TitleText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="24sp" android:textColor="#000000"/>
    <TextView
            android:text="Location"
            android:layout_width="150dp"
            android:layout_height="27dp" android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="24sp" android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Camera"
            android:layout_width="150dp"
            android:layout_height="27dp" android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="24sp" android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Phone"
            android:layout_width="150dp"
            android:layout_height="27dp" android:id="@+id/textView8"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="24sp" android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Contacts"
            android:layout_width="150dp"
            android:layout_height="27dp" android:id="@+id/textView10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="24sp" android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_marginTop="16dp"/>
    <TextView
            android:text="access photos, media and files on your device"
            android:layout_width="254dp"
            android:layout_height="51dp" android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp" android:textSize="16sp"/>
    <TextView
            android:text="access this device's location"
            android:layout_width="254dp"
            android:layout_height="51dp" android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp" android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
            android:text="take pictures and record videos"
            android:layout_width="254dp"
            android:layout_height="51dp" android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp" android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <TextView
            android:text="make and manage phone calls"
            android:layout_width="254dp"
            android:layout_height="51dp" android:id="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp" android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"/>
    <TextView
            android:text="access your contacts"
            android:layout_width="254dp"
            android:layout_height="51dp" android:id="@+id/textView11"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp" android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="28dp" android:id="@+id/storageSwitch"
            app:layout_constraintTop_toBottomOf="@+id/TitleText"
            android:layout_marginTop="68dp" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="48dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="26dp" android:scaleX="1.5" android:scaleY="1.5"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="28dp" android:id="@+id/locationSwitch"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="26dp" android:scaleX="1.5" android:scaleY="1.5"
            app:layout_constraintTop_toBottomOf="@+id/storageSwitch"
            android:layout_marginTop="66dp" app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="48dp"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="28dp" android:id="@+id/camaraSwitch"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="26dp" android:scaleX="1.5" android:scaleY="1.5"
            app:layout_constraintTop_toBottomOf="@+id/locationSwitch" android:layout_marginTop="66dp"
            app:layout_constraintStart_toEndOf="@+id/textView7" android:layout_marginStart="48dp"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="28dp" android:id="@+id/contactSwitch"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="26dp" android:scaleX="1.5" android:scaleY="1.5"
            app:layout_constraintTop_toBottomOf="@+id/phoneSwitch" android:layout_marginTop="66dp"
            app:layout_constraintStart_toEndOf="@+id/textView11" android:layout_marginStart="48dp"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="28dp" android:id="@+id/phoneSwitch"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="26dp" android:scaleX="1.5" android:scaleY="1.5"
            app:layout_constraintTop_toBottomOf="@+id/camaraSwitch"
            android:layout_marginTop="66dp" app:layout_constraintStart_toEndOf="@+id/textView9"
            android:layout_marginStart="48dp"/>
    <Button
            android:text="continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/continueButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11" android:layout_marginTop="8dp"
            android:onClick="GenerateMessages"/>
    <Button
            android:text="cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cancelButton"
            app:layout_constraintEnd_toStartOf="@+id/continueButton" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11" android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>