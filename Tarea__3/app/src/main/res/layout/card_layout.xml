<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="8dp"
        android:minHeight="100dp"
        app:cardElevation="6dp">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear_layout">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/constraintLayout">


            <TextView
                    android:text="Y en la radio un cochinero"
                    android:layout_width="match_parent"
                    android:layout_height="24dp" android:id="@+id/descriptionText"
                    android:textAlignment="center" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp" app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginTop="10dp"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp" app:srcCompat="@drawable/_000x1000" android:id="@+id/imageView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="6dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="6dp"
                    android:layout_marginTop="6dp"/>
            <TextView
                    android:text="Vanz"
                    android:layout_width="match_parent"
                    android:layout_height="24dp" android:id="@+id/vendorText"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="6dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/descriptionText" android:layout_marginTop="10dp"
                    app:layout_constraintHorizontal_bias="1.0"/>
            <TextView
                    android:text="200"
                    android:layout_width="113dp"
                    android:layout_height="20dp" android:id="@+id/priceField"
                    app:layout_constraintTop_toBottomOf="@+id/vendorText"
                    android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="6dp"/>
            <Button
                    android:text="Add to cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/addToCart"
                    app:layout_constraintStart_toEndOf="@+id/priceField"
                    android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vendorText" android:layout_marginTop="10dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/editItem"
                    android:text="Edit"
                    android:layout_marginBottom="16dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/priceField" android:layout_marginTop="30dp"
                    app:layout_constraintHorizontal_bias="0.501" app:layout_constraintVertical_bias="1.0"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>